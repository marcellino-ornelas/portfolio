include ../mixins/flash-messages

doctype html
html

  //- HTML HEADER
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible" content="IE=edge")

    title= title || 'Marcellino Ornelas'
    link(rel="shortcut icon", href="/favicon.ico", type="image/x-icon")

    //- Libraries
    link(rel="stylesheet", href="/libs/materialize/css/materialize.min.css")

    //- My css
    link(href="/styles/site.min.css", rel="stylesheet")

    //- This file provides the default styling for the KeystoneJS Content Editor
    if user && user.canAccessKeystone
      link(href="/keystone/styles/content/editor.min.css", rel="stylesheet")

    //- [if lt IE 9]
      script(src="https://cdn.jsdelivr.net/html5shiv/3.7.3/html5shiv.js")
      script(src="https://cdn.jsdelivr.net/respond/1.4.2/respond.min.js")
    //-[endif]

    //- Include template-specific stylesheets by extending the css block
    block css

    //- Add any other template-specific HEAD tags by extending the head block
    block head

  //- HTML BODY
  body

    //- HEADER
    header#header
      .nav
        .navbar-fixed: nav
          .nav-wrapper
            a.brand-logo(href="/") Marcellino Ornelas
            a.button-collapse(href="#", data-activates="mobile-demo"): i.material-icons.fa.fa-bars
            ul.right.hide-on-med-and-down
              li: a(href="/") Home
              li: a(href="/projects") Projects
              li: a(href="/contact-us") Contact Me
              li: a(href="/about") About Me
              if user && user.canAccessKeystone
                li: a(href='/keystone') Admin
                li: a(href='/keystone/signout') Sign Out
        ul#mobile-demo.side-nav
          li: a(href="/") Home
          li: a(href="/projects") Projects
          li: a(href="/contact-us") Contact Me
          li: a(href="/about") About Me
          if user && user.canAccessKeystone
            li: a(href='/keystone') Admin
            li: a(href='/keystone/signout') Sign Out

    //- BODY
    main#body

      //- NOTE:
      //- There is no .container wrapping class around body blocks to allow more flexibility in design.
      //- Remember to include it in your templates when you override the intro and content blocks!

      //- The Intro block appears above flash messages (used for temporary information display)
      block intro

      //- Flash messages allow you to display once-off status messages to users, e.g. form
      //- validation errors, success messages, etc.
      +flash-messages(messages)

      //- The content block should contain the body of your template's content
      block content


    //- FOOTER
    footer#footer.page-footer
      .container
        .row
          .col.l6.s12
            h5.white-text Footer Contact
            p.grey-text.text-lighten-4 You can use rows and columns here to organize your footer content.
          .col.l6.s12
            h5.white-text Extras
            ul
              if user && user.canAccessKeystone
                li: a(href='/keystone') Admin
                li: a(href='/keystone/signout') Sign Out
              else
                li: a(href="/keystone") Sign In
      .footer-copyright
        .container Â© 2014 Copyright Text

    //- JAVASCRIPT

    //- Libraries
    script(src='/libs/jquery/jquery-1.11.3.min.js')
    script(src="/libs/materialize/js/materialize.min.js")


    //- The KeystoneJS Content Editor provides support for ks-editable data attributes,
    //- which generate links to edit content for users who can access Keystone
    if user && user.canAccessKeystone
      script(src='/keystone/js/content/editor.js')

    //- Include template-specific javascript files by extending the js block
    block js

    //- Add scripts that are globally required by your site here.
    script(src="/js/app.js")

